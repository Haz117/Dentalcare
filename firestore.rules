rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de citas (appointments) - Modo desarrollo
    match /appointments/{appointmentId} {
      // Permitir todas las operaciones para desarrollo
      allow read, write: if true;
    }
    
    // Reglas para perfiles de usuario - Modo desarrollo
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Reglas para notificaciones - Modo desarrollo
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Reglas para disponibilidad - Modo desarrollo
    match /availability/{availabilityId} {
      allow read, write: if true;
    }
    
    // Reglas para configuración del consultorio - Modo desarrollo
    match /clinic/{document} {
      allow read, write: if true;
    }
  }
}